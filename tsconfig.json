{
  "compilerOptions": {
    "outDir": "dist", // 输出目录i
    "sourceMap": true, // 使用sourceMap
    "target": "es2016", // 目标语法
    "module": "ESNext", // 模块格式
    "moduleResolution": "node", // 模块解析方式
    "strict": false, // 严格模式
    "resolveJsonModule": true, // 解析json模块
    "esModuleInterop": true, // 允许通过import xx from 'xx' 导入commonjs模块
    "jsx": "preserve", //jsx 不转义
    "lib": ["ESNext", "dom"], // 支持的类库 esnext和dom
    "baseUrl": ".",
    "paths": {
      "@vue/*": ["packages/*/src"]
    }
  }
}
